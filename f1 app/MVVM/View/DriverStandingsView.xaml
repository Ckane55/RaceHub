<UserControl x:Class="f1_app.MVVM.View.DriverStandingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:f1_app.MVVM.View" 
             xmlns:viewmodel="clr-namespace:f1_app.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="499">





    <Grid Width="790">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>









        <DataGrid
     
        RowHeight="35" 
        BorderBrush="Transparent"
        CanUserSortColumns="False"
        CanUserResizeRows="False"
        HeadersVisibility="Column"
        AlternatingRowBackground="#27292b"
        RowBackground="#313437"
        Foreground="White"
        ColumnWidth="240"
        Margin="10,54,0,0"
        Name="grid"
        AutoGenerateColumns="False"
        ItemsSource="{Binding Drivers}" >



            <DataGrid.Resources>


                <Style  TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#27292b" />
                    <Setter Property="Foreground" Value="White"/>


                </Style>

                <Style  TargetType="{x:Type DataGrid}">
                    <Setter Property="Background" Value="#27292b"/>

                </Style>




            </DataGrid.Resources>


            <DataGrid.Columns>
                <DataGridTextColumn
             
             x:Name="Position"
             Header="Position"
             FontSize="18"
             Binding="{Binding Position, UpdateSourceTrigger=PropertyChanged}">


                </DataGridTextColumn>
                <DataGridTextColumn
             x:Name="Driver"
             Header="Driver"
             FontSize="18"
             
             Binding="{Binding DriverName, UpdateSourceTrigger=PropertyChanged}"
             
             ></DataGridTextColumn>
                <DataGridTextColumn
             x:Name="Points"
             Header="Points"
             FontSize="18"
            
             Binding="{Binding Points, UpdateSourceTrigger=PropertyChanged}"
             ></DataGridTextColumn>


            </DataGrid.Columns>
        </DataGrid>
        <ComboBox HorizontalAlignment="Left" 
                  Margin="10,24,0,0" 
                  VerticalAlignment="Top" 
                  Width="120"
                  ItemsSource="{Binding AvailableYears}"
                  SelectedItem="{Binding SelectedYear}"/>
        <TextBlock TextWrapping="Wrap" Text="Year" Margin="10,0,707,430"
                   Foreground="White"
                   FontSize="18"/>




    </Grid>

</UserControl>


