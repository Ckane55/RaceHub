<UserControl x:Class="f1_app.MVVM.View.ControlsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:f1_app.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        

        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>

        <ComboBox
                 
                  HorizontalAlignment="Left" 
                  ItemsSource="{Binding AvailableYears}"
                  SelectedIndex="{Binding Year}"
                  SelectedItem="{Binding SelectedYear}" 
                  VerticalAlignment="Center" Width="120"
                  
                  Foreground="Black" Height="22" Margin="233,0,0,0"/>
        <Label Content="Year" FontSize="18" Foreground="White" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" Height="34" Width="44" Grid.Column="1" Margin="59,-4,0,0"/>


        <ComboBox HorizontalAlignment="Left" 
                  
                  
                  ItemsSource="{Binding StandingsType}"
                  SelectedIndex="{Binding selectedType}"
                  
                  Margin="59,0,0,0" 
                  VerticalAlignment="Center" Width="120"
                  
                  Foreground="Black" Height="22" Grid.Column="1"/>

        <Label Content="Type" FontSize="18" Foreground="White" 
       HorizontalAlignment="Left" 
       VerticalAlignment="Top" Height="34" Width="60" Grid.Column="1" Margin="233,-7,0,0" RenderTransformOrigin="0.444,0.029"/>

    </Grid>
</UserControl>
